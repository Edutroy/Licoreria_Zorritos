    <link href="styles.css" rel="stylesheet">
    <title>CRUD</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
    <nav class="navbar navbar-dark">      
      </nav>            
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Inicio</a>
              </li>                            
            </ul>            
          </div>
        </div>
      </nav>
      <% if (usuarios) { %>
      <div class="container mt-4">          
          <div class="card border-secondary">  
                <div class="card-header">Editar Registro</div>
                <div class="card-body">
                    <form action="/update" method="POST">
                         <input id="ID_user" name="ID_user" value="<%= usuarios.ID_user%>" hidden>
                
                        <div class="mb-3">
                            <label for="Nombre_user" class="form-label">Nombre</label>
                            <input class ="form-control" type="text" id =" Nombre_user" name ="Nombre_user" value="<%= usuarios.nombre_user  %>"
                            />
                        </div>
                        
                        <div class="mb-3">
                            <label for="Apellido_user" class="form-label">Apellido</label>
                            <input type="text" class ="form-control" id =" Apellido_user" name ="Apellido_user" value="<%= usuarios.apellido_user %>"
                            />
                        </div>
    
                        <div class="mb-3">
                            <label for="telefono_user" class="form-label">Telefono</label>
                            <input type="text" class ="form-control" id =" telefono_user" name ="telefono_user"  value="<%= usuarios.telefono_user %>"
                            />
                        </div>
    
                        <div class="mb-3">
                            <label for="DNI_userr" class="form-label">DNI</label>
                            <input type="text" class ="form-control" id =" DNI_user" name ="DNI_user"  value="<%= usuarios.DNI_user%>"
                            />
                        </div>
                        
                        <div class="mb-3">
                                 <label for="correo_user" class="form-label">correo</label>
                            <input type="text" class ="form-control" id =" correo_user" name ="correo_user"  value="<%= usuarios.correo_user  %>"
                            />
                        </div>
    
                        <div class="mb-3">
                            <label for="contraseña_user" class="form-label">contraseña</label>
                            <input type ="password" class ="form-control" id="contraseña_user" name="contraseña_user" value="<%= usuarios.contraseña_user  %>" 
                            />
                        </div>
                        
                        </div>                                                              
                        <button type="submit" class="btn btn-primary" >Guardar</button>
                        <a href="/" class="btn btn-secondary">Cancelar</a>
                    </form>      
                </div>
            </div>     
      </div>
      <% } %>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
